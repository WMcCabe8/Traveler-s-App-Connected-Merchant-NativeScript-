<Page loaded="load">
  <GridLayout rows="auto, *">
      <ListView items="{{ merchants }}" itemTap="toMerchant" row="1">
          <ListView.itemTemplate>
              <Border cornerRadius="20" borderWidth="2" borderColor="#669900">
              	<Label text="{{ storename }}" />
              </Border>
          </ListView.itemTemplate>
      </ListView>
  </GridLayout>
</Page>