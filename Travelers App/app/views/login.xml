<Page loaded="load">
    <StackLayout marginLeft="20" marginRight="20">
        <Image source="{{ logoSource }}" />
        
        <Label text="Username:" id="id1"/>
        <Border cornerRadius="1" borderWidth="2" borderColor="#ACB0AF">
            <TextField width="200" text="{{ username }}" id="username" hint="Username" />
        </Border>
            
        <Label text="Password:" id="id1"/>
        <Border cornerRadius="1" borderWidth="2" borderColor="#ACB0AF">
        	<TextField width="200" secure="true" text="{{ password }}" hint="Password" />
        </Border>
         
        <Button text="Sign In" tap="signIn" />
        <Button text="Sign up for Traveler's App" tap="register" />
    </StackLayout>
</Page>